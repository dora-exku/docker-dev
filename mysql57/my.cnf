[mysqld]
# Server Configuration
# 开启TIME_ZONE
sql_mode=""
# Basic settings
user = mysql
port = 3306
bind-address = 0.0.0.0 # Allow connections from any IP (development only)

# Directories
datadir = /var/lib/mysql
socket = /var/run/mysqld/mysqld.sock

# Buffer and cache settings (optimized for development)
innodb_buffer_pool_size = 64M # Small buffer for development
innodb_log_file_size = 16M

# Lower query cache size for dev environment
query_cache_size = 16M
query_cache_type = 1

# Disable query cache if not needed
# query_cache_type = 0

# Logging settings for debugging
general_log = 1
general_log_file = /var/log/mysql/general.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Error logging
log_error = /var/log/mysql/error.log

# Performance settings
max_connections = 100
max_allowed_packet = 16M
tmp_table_size = 32M

# SQL mode for easier development
sql_mode = "STRICT_TRANS_TABLES,NO_ENGINE_SUBSTITUTION"

# Disable binary logging for faster development
skip-log-bin

[client]
# Client settings
port = 3306
socket = /var/run/mysqld/mysqld.sock
